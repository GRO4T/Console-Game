    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run ASCII Combat",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/ascii-combat",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "name": "Attach to running ASCII Combat",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/bazel-bin/ascii-combat",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
    ]
}